<ContentDialog
    x:Class="DataYRAN.Script.ContentDialogScriptSaveRAzvertki"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataYRAN.Script"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Листинг скрипта Пайтен для условий сохранения развертки события."
    PrimaryButtonText="Применить"

    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick" MinHeight="800" MinWidth="800">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
    
            <TextBlock TextWrapping="WrapWholeWords" Text="Для обработки доступен обьект класса 'Sob' описывающий отдельное событие "/>
            <TextBlock TextWrapping="WrapWholeWords" Text="Для сохранения разветки переменная 'rez' должна быть 'true'"/>
        </StackPanel>
        <TextBox Grid.Row="1" x:Name="TextScript" TextWrapping="Wrap"/>
 

    </Grid>
</ContentDialog>
